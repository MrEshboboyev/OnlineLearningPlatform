@model IEnumerable<AnswerDTO>

@{
    ViewBag.Title = "Manage Answers for Question: " + ViewBag.QuestionText;
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Manage Answers for: @ViewBag.QuestionText</h1>

    <div class="text-end mb-4">
        <a asp-action="CreateAnswer" asp-route-questionId="@ViewBag.QuestionId" class="btn btn-primary">Add New Answer</a>
    </div>

    <!-- Answer List -->
    <div class="row">
        @foreach (var answer in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@answer.AnswerText</h5>
                        <p class="card-text">
                            <strong>Correct:</strong> @(answer.IsCorrect ? "Yes" : "No")
                        </p>
                        <div class="d-flex justify-content-end">
                            <a asp-action="EditAnswer" asp-route-answerId="@answer.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                            <a asp-action="DeleteAnswer" asp-route-answerId="@answer.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
