@model IEnumerable<CourseDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-light">Your Courses</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No courses found yet.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var course in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm bg-dark text-light border-0">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Description</p>
                            <p class="text-muted">Category: @course.Category</p>
                            <p class="text-muted">Level: @course.Level</p>

                            <!-- Button to show course details -->
                            <button class="btn btn-secondary mb-3 hover-zoom" onclick="showDetails('Course', '@course.Title', '@course.Description')">
                                View Course Details
                            </button>
                            <a asp-controller="Progress" asp-action="Index" asp-route-courseId="@course.Id" class="btn btn-outline-primary mb-3 hover-zoom" >
                                Student Progress
                            </a>

                            <!-- Course Management Section -->
                            <div class="accordion" id="courseAccordion-@course.Id">
                                <div class="accordion-item bg-dark border-secondary">
                                    <h6 class="accordion-header" id="headingModules-@course.Id">
                                        <button class="accordion-button collapsed bg-dark text-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseModules-@course.Id" aria-expanded="false" aria-controls="collapseModules-@course.Id">
                                            Manage Course Elements
                                        </button>
                                    </h6>
                                    <div id="collapseModules-@course.Id" class="accordion-collapse collapse" aria-labelledby="headingModules-@course.Id" data-bs-parent="#courseAccordion-@course.Id">
                                        <div class="accordion-body">
                                            <!-- Modules -->
                                            <div class="mb-3">
                                                <h6 class="text-info">Modules</h6>
                                                @if (course.Modules == null || !course.Modules.Any())
                                                {
                                                    <p class="text-muted">No modules found yet.</p>
                                                }
                                                else
                                                {
                                                    <ul class="list-group list-group-flush">
                                                        @foreach (var module in course.Modules)
                                                        {
                                                            <li class="list-group-item bg-dark text-light border-secondary">
                                                                <strong>@module.Title</strong>
                                                                <button class="btn btn-link btn-sm float-end text-info hover-zoom" onclick="showDetails('Module', '@module.Title', 'Related to course: @course.Title')">
                                                                    View Module Details
                                                                </button>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                <a asp-controller="Module" asp-action="ManageModules" asp-route-courseId="@course.Id" class="btn btn-outline-warning btn-sm hover-zoom mt-2">Manage Modules</a>
                                            </div>

                                            <!-- Quizzes -->
                                            <div class="mb-3">
                                                <h6 class="text-info">Quizzes</h6>
                                                @if (course.Quizzes == null || !course.Quizzes.Any())
                                                {
                                                    <p class="text-muted">No quizzes found yet.</p>
                                                }
                                                else
                                                {
                                                    <ul class="list-group list-group-flush">
                                                        @foreach (var quiz in course.Quizzes)
                                                        {
                                                            <li class="list-group-item bg-dark text-light border-secondary">
                                                                @quiz.Title
                                                                <button class="btn btn-link btn-sm float-end text-info hover-zoom" onclick="showDetails('Quiz', '@quiz.Title', 'Related to course: @course.Title')">
                                                                    View Quiz Details
                                                                </button>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                <a asp-controller="Quiz" asp-action="ManageQuizzes" asp-route-courseId="@course.Id" class="btn btn-outline-warning btn-sm hover-zoom mt-2">Manage Quizzes</a>
                                            </div>

                                            <!-- Enrollments -->
                                            <div class="mb-3">
                                                <h6 class="text-info">Enrollments</h6>
                                                @if (course.Enrollments == null || !course.Enrollments.Any())
                                                {
                                                    <p class="text-muted">No enrollments found yet.</p>
                                                }
                                                else
                                                {
                                                    <ul class="list-group list-group-flush">
                                                        @foreach (var enrollment in course.Enrollments)
                                                        {
                                                            <li class="list-group-item bg-dark text-light border-secondary">
                                                                Student: @enrollment.StudentDTO.UserName | Progress: @enrollment.ProgressPercentage%
                                                                <button class="btn btn-link btn-sm float-end text-info hover-zoom" onclick="showDetails('Enrollment', 'Student: @enrollment.StudentDTO.UserName', 'Progress: @enrollment.ProgressPercentage%')">
                                                                    View Enrollment Details
                                                                </button>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                <a asp-action="Enrollments" asp-route-courseId="@course.Id" class="btn btn-outline-warning btn-sm hover-zoom mt-2">Manage Enrollments</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Details Button -->
                            <a asp-action="Details" asp-route-courseId="@course.Id" class="btn btn-outline-info mb-3 hover-zoom">Details</a>

                            <!-- Update/Delete Buttons -->
                            <div class="d-flex justify-content-evenly">
                                <a asp-action="Update" asp-route-courseId="@course.Id" class="btn btn-secondary hover-zoom">Update</a>
                                <a asp-action="Delete" asp-route-courseId="@course.Id" class="btn btn-danger hover-zoom">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function showDetails(type, title, content) {
            Swal.fire({
                title: title,
                text: content,
                icon: 'info',
                confirmButtonText: 'Close'
            });
        }
    </script>
}