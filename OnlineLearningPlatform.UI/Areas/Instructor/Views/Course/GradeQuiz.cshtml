@model QuizSubmissionDTO

<div class="container mt-5">
    <h2 class="text-center mb-4 text-success">Grade Submission for @Model.StudentDTO.UserName</h2>

    <form asp-action="GradeQuiz" method="post">
        <input type="hidden" name="SubmissionId" value="@Model.Id" />

        <div class="mb-3">
            <label for="grade" class="form-label">Grade</label>
            <input type="number" class="form-control" id="grade" name="Grade" value="@Model.Grade" required>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Submit Grade</button>
        </div>
    </form>
</div>
