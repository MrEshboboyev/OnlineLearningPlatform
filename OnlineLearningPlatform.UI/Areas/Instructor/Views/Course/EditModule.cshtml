@model ModuleDTO

<div class="container">
    <h2 class="text-light">Edit Module: @Model.Title</h2>

    <form asp-action="EditModule" asp-route-moduleId="@Model.Id" method="post" class="bg-dark p-4 rounded">
        @Html.AntiForgeryToken()

        <input asp-for="Id" hidden/>
        <input asp-for="CourseId" hidden/>
        <div class="mb-3">
            <label for="Title" class="form-label text-light">Module Title</label>
            <input asp-for="Title" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Module</button>
        <a asp-action="ManageModules" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
