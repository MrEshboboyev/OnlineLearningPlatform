@model QuizDTO

<div class="container mt-5">
    <h2 class="text-center mb-4 text-warning">Edit Quiz: @Model.Title</h2>

    <form asp-action="EditQuiz" method="post">
        <input asp-for="Id" hidden/>
        <input asp-for="CourseId" hidden/>

        <div class="mb-3">
            <label for="quizTitle" class="form-label">Quiz Title</label>
            <input type="text" class="form-control" id="quizTitle" name="Title" value="@Model.Title" required>
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
