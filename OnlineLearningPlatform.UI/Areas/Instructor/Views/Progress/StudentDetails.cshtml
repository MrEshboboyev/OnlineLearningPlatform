@model IEnumerable<ProgressDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4">Student Progress: @Model.FirstOrDefault()?.StudentDTO.UserName</h2>

    <!-- ApexCharts Placeholder for student's course progress -->
    <div id="studentProgressChart" class="chart-container mb-4" style="max-width: 400px; margin: auto;"></div>

    <!-- Lessons progress -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Lesson Title</th>
                <th>Status</th>
                <th>Completion Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var progress in Model)
            {
                <tr>
                    <td>@progress.LessonDTO.Title</td>
                    <td>
                        @if (progress.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Incomplete</span>
                        }
                    </td>
                    <td>@(progress.IsCompleted ? progress.CompletionDate.ToShortDateString() : "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include ApexCharts and render the chart -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        var options = {
            chart: {
                type: 'pie',
                height: 300
            },
            series: [
                @Model.Count(p => p.IsCompleted), 
                @Model.Count(p => !p.IsCompleted)
            ],
            labels: ['Completed', 'Incomplete'],
            colors: ['#4CAF50', '#FF6384'],
            title: {
                text: 'Lesson Completion Status'
            }
        };

        var chart = new ApexCharts(document.querySelector("#studentProgressChart"), options);
        chart.render();
    </script>
}
