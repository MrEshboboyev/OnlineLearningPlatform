@model IEnumerable<ProgressDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4">Student Progress: @Model.FirstOrDefault()?.StudentDTO.UserName</h2>

    <!-- Chart.js Placeholder for student's course progress -->
    <div class="chart-container mb-4" style="max-width: 400px; margin: auto;">
        <canvas id="studentProgressChart" width="400" height="300"></canvas>
    </div>

    <!-- Lessons progress -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Lesson Title</th>
                <th>Status</th>
                <th>Completion Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var progress in Model)
            {
                <tr>
                    <td>@progress.LessonDTO.Title</td>
                    <td>
                        @if (progress.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Incomplete</span>
                        }
                    </td>
                    <td>@(progress.IsCompleted ? progress.CompletionDate.ToShortDateString() : "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include Chart.js and render the chart -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('studentProgressChart').getContext('2d');
        var studentProgressChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Completed', 'Incomplete'],
                datasets: [{
                    data: [
        @Model.Count(p => p.IsCompleted),
        @Model.Count(p => !p.IsCompleted)
                            ],
                    backgroundColor: ['rgba(75, 192, 192, 0.2)', 'rgba(255, 99, 132, 0.2)'],
                    borderColor: ['rgba(75, 192, 192, 1)', 'rgba(255, 99, 132, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
}
