@model IEnumerable<StudentProgressDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4">Course Progress Overview</h2>

    <!-- ApexCharts Placeholder for general course progress -->
    <div id="courseProgressChart" class="chart-container mb-4" style="max-width: 600px; margin: auto;"></div>

    <!-- Students list with progress details -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Student</th>
                <th>Total Lessons</th>
                <th>Completed Lessons</th>
                <th>Progress</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var progress in Model)
            {
                <tr>
                    <td>@progress.UserName</td>
                    <td>@progress.TotalLessons</td>
                    <td>@progress.CompletedLessons</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar"
                                 style="width: @(progress.CompletedLessons * 100 / progress.TotalLessons)%">
                                @progress.CompletedLessons / @progress.TotalLessons
                            </div>
                        </div>
                    </td>
                    <td class="text-end">
                        <a href="@Url.Action("StudentDetails", new { courseId = progress.CourseId, studentId = progress.StudentId })" class="btn btn-primary btn-sm">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include ApexCharts and render the chart -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        var options = {
            chart: {
                type: 'bar',
                height: 300
            },
            series: [{
                name: 'Completed Lessons',
                data: @Html.Raw(Json.Serialize(Model.Select(p => p.CompletedLessons).ToList()))
            }],
            xaxis: {
                categories: @Html.Raw(Json.Serialize(Model.Select(p => p.UserName).ToList()))
            },
            title: {
                text: 'Lesson Completion by Student'
            },
            colors: ['#36A2EB'],
            plotOptions: {
                bar: {
                    distributed: true
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#courseProgressChart"), options);
        chart.render();
    </script>
}
