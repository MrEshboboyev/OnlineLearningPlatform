@model IEnumerable<ProgressDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-light">Course Progress Overview</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No progress records found for this course.
        </div>
    }
    else
    {
        <!-- Table showing individual progress -->
        <table class="table table-dark table-hover table-striped shadow-sm">
            <thead class="thead-light">
                <tr>
                    <th>Student</th>
                    <th>Lesson</th>
                    <th>Status</th>
                    <th>Completion Date</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var progress in Model)
                {
                    <tr>
                        <td>@progress.StudentDTO.UserName</td>
                        <td>@progress.LessonDTO.Title</td>
                        <td>
                            @if (progress.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Incomplete</span>
                            }
                        </td>
                        <td>@(progress.IsCompleted ? progress.CompletionDate.ToShortDateString() : "N/A")</td>
                        <td class="text-end">
                            <a asp-action="StudentProgressDetails"
                               asp-route-courseId="@progress.LessonDTO.ModuleDTO.CourseId"
                               asp-route-studentId="@progress.StudentId"
                               class="btn btn-outline-info btn-sm">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Section for Chart -->
        <div class="mt-5">
            <h4 class="text-center text-light">Course Completion Chart</h4>
            <canvas id="progressChart" class="mt-4"></canvas>
        </div>
    }
</div>

<!-- Script for rendering the Chart -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Data Preparation
        var totalLessons = @Model.Count();
        var completedLessons = @Model.Count(p => p.IsCompleted);
        var incompleteLessons = totalLessons - completedLessons;

        // Chart.js Setup
        var ctx = document.getElementById('progressChart').getContext('2d');
        var progressChart = new Chart(ctx, {
            type: 'doughnut', // or 'bar' for bar chart
            data: {
                labels: ['Completed Lessons', 'Incomplete Lessons'],
                datasets: [{
                    label: 'Course Progress',
                    data: [completedLessons, incompleteLessons],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.7)', // Color for completed
                        'rgba(255, 99, 132, 0.7)'  // Color for incomplete
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Overall Course Progress'
                    }
                }
            }
        });
    });
</script>
