@model QuestionDTO
@{
    ViewBag.Title = "Delete Question";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">Delete Question</h1>

    <div class="alert alert-danger text-center">
        Are you sure you want to delete the question "<strong>@Model.QuestionText</strong>"?
    </div>

    <form method="post" asp-action="DeleteQuestion">
        <input asp-for="QuizId" hidden />
        <input asp-for="Id" hidden>
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="ManageQuestions" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
