@model IEnumerable<ModuleDTO>

@{
    ViewBag.Title = "Manage Modules";
}

<div class="container mt-4">
    <h1 class="text-center mb-5">Manage Modules by Course</h1>

    <div class="accordion" id="coursesAccordion">
        @foreach (var courseGroup in Model.GroupBy(m => m.CourseDTO))
        {
            var course = courseGroup.Key;
            var courseId = course.Id;

            <div class="accordion-item">
                <h2 class="accordion-header d-flex justify-content-between align-items-center" id="heading-@courseId">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@courseId" aria-expanded="false" aria-controls="collapse-@courseId">
                        @course.Title (@course.Category) - @course.Level
                    </button>
                    <a href="@Url.Action("ManageModules", new { courseId = courseId })" class="btn btn-outline-primary btn-sm ms-3">Manage Modules</a>
                </h2>
                <div id="collapse-@courseId" class="accordion-collapse collapse" aria-labelledby="heading-@courseId" data-bs-parent="#coursesAccordion">
                    <div class="accordion-body">
                        <!-- Display Modules within this course -->
                        @if (!courseGroup.Any())
                        {
                            <p>No modules available for this course.</p>
                        }
                        else
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Module Title</th>
                                        <th>Number of Lessons</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in courseGroup)
                                    {
                                        <tr>
                                            <td>@module.Title</td>
                                            <td>@module.LessonDTOs.Count</td>
                                            <td>
                                                <a href="@Url.Action("ModuleDetails", new { moduleId = module.Id })" class="btn btn-primary btn-sm">Details</a>
                                                <a href="@Url.Action("EditModule", new { moduleId = module.Id })" class="btn btn-warning btn-sm">Edit</a>
                                                <form asp-action="DeleteModule" method="post" class="d-inline">
                                                    <input type="hidden" name="moduleId" value="@module.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
