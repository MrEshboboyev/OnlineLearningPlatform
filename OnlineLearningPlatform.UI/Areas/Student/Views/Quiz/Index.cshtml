@model IEnumerable<QuizDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-light">Available Quizzes</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No quizzes available for this course.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var quiz in Model)
            {
                <div class="list-group-item list-group-item-action bg-dark text-light d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@quiz.Title</h5>
                        <small class="text-muted">Click to start the quiz</small>
                    </div>
                    <a href="@Url.Action("TakeQuiz", "Quiz", new { quizId = quiz.Id })" class="btn btn-outline-info">
                        <i class="bi bi-arrow-right-circle"></i> Take Quiz
                    </a>
                </div>
            }
        </div>
    }
</div>
