@model LessonDTO

@{
    ViewBag.Title = "Lesson Details";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Lesson", new { courseId = Model.ModuleDTO.CourseId })">Back to Lessons</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="card shadow-lg mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">@Model.Title</h2>
            <p class="card-subtitle">@Model.ModuleDTO.Title - @Model.ModuleDTO.CourseDTO.Title</p>
        </div>
        <div class="card-body">
            <p class="card-text">
                @Model.Content
            </p>
        </div>
    </div>

    <div class="text-end">
        <a href="@Url.Action("Index", "Lesson", new { courseId = Model.ModuleDTO.CourseId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Lessons
        </a>
    </div>
</div>
