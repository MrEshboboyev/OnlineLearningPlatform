@model LessonDTO

@{
    ViewBag.Title = "Lesson Details";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Lesson", new { courseId = Model.ModuleDTO.CourseId })">Back to Lessons</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="card shadow-lg mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">@Model.Title</h2>
            <p class="card-subtitle">@Model.ModuleDTO.Title - @Model.ModuleDTO.CourseDTO.Title</p>
        </div>
        <div class="card-body">
            <p class="card-text">
                @Html.Raw(Model.Content)
            </p>
        </div>
    </div>

    <!-- Completion Form -->
    <div class="text-center mt-4">
        @using (Html.BeginForm("MarkLessonComplete", "Lesson", FormMethod.Post, new { @class = "d-inline" }))
        {
            @Html.Hidden("lessonId", Model.Id)
            <button type="submit" class="btn btn-success">
                Mark as Completed
            </button>
        }
    </div>

    <div class="text-end mt-4">
        <a href="@Url.Action("Index", "Lesson", new { courseId = Model.ModuleDTO.CourseId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Lessons
        </a>
    </div>
</div>
