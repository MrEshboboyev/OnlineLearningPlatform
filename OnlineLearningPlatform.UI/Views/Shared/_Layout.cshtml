<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Learning Platform</title>

    <!-- Bootstrap and Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Include the new external custom.css file -->
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <!-- Side Navigation Bar -->
    <div class="sidenav bg-dark text-white p-3" style="min-width: 250px;">
        <a href="javascript:void(0)" class="navbar-brand text-white mb-3">Online Learning App</a>
        <!-- UserProfile -->
        <a asp-area="" asp-controller="UserProfile" asp-action="Index" class="text-white mb-2"><i class="bi bi-person"></i> My Profile</a>

        <!-- Enrollment -->
        <a asp-area="" asp-controller="Enrollment" asp-action="Index" class="text-white mb-2"><i class="bi bi-pencil-square"></i> My Enrollments</a>

        @if (User.IsInRole(SD.Role_Instructor))
        {
            <a asp-area="@SD.Role_Instructor" asp-controller="Course" asp-action="Index" class="text-white mb-2"><i class="bi bi-book"></i> My Courses</a>
        }

        <!-- Courses -->
        <a asp-area="" asp-controller="Course" asp-action="Index" class="text-white mb-2"><i class="bi bi-book"></i> All Courses</a>

        <!-- Lessons -->
        <a asp-area="" asp-controller="Lesson" asp-action="Index" class="text-white mb-2"><i class="bi bi-file-text"></i> Lessons</a>

        <!-- Modules -->
        <a asp-area="" asp-controller="Module" asp-action="Index" class="text-white mb-2"><i class="bi bi-columns-gap"></i> Modules</a>

        <!-- Progress Tracking -->
        <a asp-area="" asp-controller="Progress" asp-action="Index" class="text-white mb-2"><i class="bi bi-graph-up"></i> My Progress</a>

        <!-- Quizzes -->
        <a asp-area="" asp-controller="Quiz" asp-action="Index" class="text-white mb-2"><i class="bi bi-question-circle"></i> Quizzes</a>

        <!-- Quiz Submissions -->
        <a asp-area="" asp-controller="QuizSubmission" asp-action="Index" class="text-white mb-2"><i class="bi bi-check-circle"></i> Quiz Submissions</a>

        <!-- Questions -->
        <a asp-area="" asp-controller="Question" asp-action="Index" class="text-white mb-2"><i class="bi bi-chat-right-text"></i> Questions</a>

        <!-- Answers (For Quiz) -->
        <a asp-area="" asp-controller="Answer" asp-action="Index" class="text-white mb-2"><i class="bi bi-reply"></i> Answers</a>

        <!-- AppUser (Admin or Architect Role) -->
        @if (User.IsInRole(SD.Role_Architect))
        {
            <a asp-area="Architect" asp-controller="AppUser" asp-action="Index" class="text-white mb-2">
                <i class="bi bi-people-fill"></i> Manage Users
            </a>
        }
    </div>

    <!-- Main Content -->
    <div class="main-content" style="margin-left: 250px;">
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Notification" asp-action="Index">
                                <i class="bi bi-bell"></i> Notifications
                                <span id="notificationCount" class="badge bg-danger"></span>
                            </a>
                        </li>
                        <!-- Login/Logout Status -->
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Render the main content of the page -->
        <main role="main" class="pb-3 pt-5">
            @RenderBody()
            <partial name="_Notifications" />
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />

    <!-- Include jQuery for AJAX -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
